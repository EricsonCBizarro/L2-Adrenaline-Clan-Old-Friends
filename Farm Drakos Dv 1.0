    Engine.MoveTo(75112, 117560, -3752);
    Print('Segunda Zona');
    Delay(1000);
    Engine.MoveTo(77704, 116968, -3800);
    Print('Terceira Zona');
    Delay(1000);
    Engine.MoveTo(79880, 116296, -3648);
    Delay(1000);
    Print('Quarta Zona');
    Engine.MoveTo(82728, 117288, -3056);
